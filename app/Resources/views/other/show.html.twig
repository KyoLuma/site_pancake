{% extends 'base.html.twig' %}

{% block body %}
    <h1>Other</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ other.id }}</td>
            </tr>
            <tr>
                <th>Urlpicture</th>
                <td>{{ other.urlPicture }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ other.title }}</td>
            </tr>
            <tr>
                <th>Creationdate</th>
                <td>{% if other.creationDate %}{{ other.creationDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ other.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('other_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('other_edit', { 'id': other.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
